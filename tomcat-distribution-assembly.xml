<assembly>
    <id>tomcat-distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/apache-tomcat-${tomcat.version}/bin
            </directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apache-tomcat-${tomcat.version}
            </directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>webapps/docs/**</exclude>
                <exclude>webapps/examples/**</exclude>
                <exclude>webapps/ROOT/favicon.ico</exclude>
                <exclude>conf/tomcat-users.xml</exclude>
                <exclude>conf/catalina.policy</exclude>
            </excludes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/rpooli</directory>
            <outputDirectory>/webapps/rpooli</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/misc/rsb.sh</source>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0744</fileMode>
        </file>
        <file>
            <source>src/misc/rsb.bat</source>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>src/misc/tomcat-users.xml</source>
            <outputDirectory>/conf</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>src/misc/catalina.policy</source>
            <outputDirectory>/conf</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>RSB-LICENSE</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>src/main/webapp/favicon.ico</source>
            <outputDirectory>/webapps/ROOT</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/webapps/rsb</outputDirectory>
            <includes>
                <include>${project.groupId}:${project.artifactId}</include>
            </includes>
            <unpack>true</unpack>
            <fileMode>0644</fileMode>
        </dependencySet>
    </dependencySets>
</assembly>
